{
  "name": "lwcrefactor",
  "publisher": "AsimAli",
  "displayName": "Lightning Web Components Refactor",
  "description": "@api renames reflected both in ts/js and html file for LWC.",
  "version": "1.3.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MAsimSENG/LWC-Refactor-VS-Code-"
  },
  "icon": "./flyingToTheMoon.png",
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onCommand:lwcrefactor.LWCREFACTOR"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lwcrefactor.LWCREFACTOR",
        "title": "LWCREFACTOR"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "jest": "^29.5.0",
    "mocha": "^10.1.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  }
}
